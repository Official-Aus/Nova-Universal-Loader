local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

if game.PlaceId == 17625359962 then --Rivals
    local Window = Rayfield:CreateWindow({
        Name = "NovaX Rivals",
        Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
        LoadingTitle = "NovaX Loader",
        LoadingSubtitle = "by Aus",
        ShowText = "NovaX", -- for mobile users to unhide rayfield, change if you'd like
        Theme = "Default", -- Check https://docs.sirius.menu/rayfield/configuration/themes

        ToggleUIKeybind = "K", -- The keybind to toggle the UI visibility (string like "K" or Enum.KeyCode)

        DisableRayfieldPrompts = false,
        DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

        ConfigurationSaving = {
            Enabled = true,
            FolderName = nil, -- Create a custom folder for your hub/game
            FileName = "Big Hub"
        },

        Discord = {
            Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
            Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
            RememberJoins = true -- Set this to false to make them join the discord every time they load it up
        },

        KeySystem = false, -- Set this to true to use our key system
        KeySettings = {
            Title = "Untitled",
            Subtitle = "Key System",
            Note = "No method of obtaining the key is provided", -- Use this to tell the user how to get a key
            FileName = "Key", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
            SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
            GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
            Key = {"Placeholder"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
        }
    })

    local Mainab = MainWindow:CreateTab("Main", 4483362458)
    
    
    local OtherTab = OtherWindow:CreateTab("Other Menu", 4483362458)

    --Other Menus 
    local Button = OtherTab:CreateButton({
        Name = "Z3US",
        Callback = function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/blackowl1231/Z3US/refs/heads/main/Games/Z3US%20Rivals%20Beta.lua"))
        end,
    })

    local SettingsTab = SettingsWindow:CreateTab("Settings", 4483362458)

    local Section = SettingsTab:CreateSection("Auto Load")


    local toggle = SettingsTab:CreateToggle({
        Name ='Auto Execute'
        CurrentValue = false,
        Flag = "AutoExeNovaX"
        Callback = function(Value)
            if (Value == true) then
                Rayfield:Notify({
                    Title = "Auto execute on",
                    Content = "Auto execute is on NovaX will load on startup!",
                    Duration = 4,
                    Image = 4483362458,
                })
                
                local autoexec_folder = "autoexec"
                local autoexec_file = autoexec_folder .. "/Nova-Loader.lua"

                if not isfile(file) then
                    writefile(file, [[
                    pcall(function()
                        loadstring(game:HttpGet("https://raw.githubusercontent.com/Official-Aus/Nova-Universal-Loader/refs/heads/main/NovaX%20Loader"))()
                    end)
                    ]])
                end
            end

            elseif (Value == false) then
                Rayfeild:Notify({
                    Title = "Auto execute off",
                    Content = "Auto execute is off NovaX will not load on startup!",
                    Duration = 4,
                })
            end
            
        end
    })

    local Button = SettingsTab:CreateButton({
        Name = "Enable",
        Callback = function()
            Rayfeild:Notify({
                Title = "Auto execute on",
                Content = "Auto execute is on NovaX will load on startup!",
                Duration = 4,
                Image = 4483362458,
            })
            -- folder + file names
            local folder = "autoexec"
            local file = folder .. "/autoload.lua"

            -- write file if missing
            if not isfile(file) then
            writefile(file, [[
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Official-Aus/Nova-Universal-Loader/refs/heads/main/NovaX%20Loader"))()
            end)
            ]])
        end
    })
end

